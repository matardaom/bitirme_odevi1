        j=j+1
for i in ogretmen:
    soru=input(f"{i},\nA) Evet,\nB) Hayır")
    if soru.lower()== "a":
        k=k+1
if a>b and a>c and a>e and a>f and a>g and a>h and a>j and a>k and a>d:
    print("Mühendislik alanında daha yeteneklisin")
elif b>a and b>c and b>e and b>f and b>g and b>h and b>j and b>k and b>d:
    print("Bilim alanında daha yeteneklisin")
elif c>b and c>a and c>e and c>f and c>g and c>h and c>j and c>k and c>d:
    print("Sanat alanında daha yeteneklisin")
elif d>b and d>c and d>e and d>f and d>g and d>h and d>j and d>k and d>a:
    print("Televizyonculuk alanında daha yeteneklisin")
elif e>b and e>c and e>a and e>f and e>g and e>h and e>j and e>k and e>d:
    print("Yöneticilik alanında daha yeteneklisin")
elif f>b and f>c and f>e and f>a and f>g and f>h and f>j and f>k and f>d:
    print("Memurluk alanında daha yeteneklisin")
elif g>b and g>c and g>e and g>f and g>a and g>h and g>j and g>k and g>d:
    print("Tamir alanında daha yeteneklisin")
elif h>b and h>c and h>e and h>f and h>g and h>a and h>j and h>k and h>d:
    print("Fen bilimleri ve matematik alanında daha yeteneklisin")
elif j>b and j>c and j>e and j>f and j>g and j>h and j>a and j>k and j>d:
    print("Tiyatro alanında daha yeteneklisin")
elif k > b and k > c and k > e and k > f and k > g and k > h and k > j and k > a and k > d:
    print("Öğretmenlik alanında daha yeteneklisin")
