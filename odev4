ogretmen=["Bir şeyler göstermeyi severim","Yardım etmeyi severim","Güzel yazı yazarım","Hitabım iyidir","Soru çözmeyi severim","Konu anlatmayı severim","Başkaları ile arkadaşça yaşamak bana kolay gelir","Eğitmek veya öğretmekte çok sabırlıyımdır"]
a=0
b=0
c=0
d=0
e=0
f=0
g=0
h=0
j=0
k=0



for i in mühendislik:
    soru=input(f"{i},\nA) Evet,\nB) Hayır")
    if soru.lower()== "a":
        a=a+1
for i in bilim_insanı:
    soru=input(f"{i},\nA) Evet,\nB) Hayır")
    if soru.lower()== "a":
        b=b+1
for i in artist:
    soru=input(f"{i},\nA) Evet,\nB) Hayır")
    if soru.lower()== "a":
        c=c+1
